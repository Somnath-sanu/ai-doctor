generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id
  name    String
  email   String
  credits Int

  reports Report[]

  @@unique([email])
}

model Report {
  id         String   @id @default(cuid())
  userId     String
  specialist String
  content    String
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
